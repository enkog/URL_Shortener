<div class="container">
  <div class="wrapper">
    <h1 class="text-center sec-color">URL Shortener</h1>

    <%= form_with model: @url, remote: true do |form|  %>
      <div class="form-group mt-4">
        <%= form.label "Enter desired url", class: "mb-3 text-uppercase" %>
        <%= form.text_field :original_url, required: true, class: "form-control form-control-lg" %>
      </div>

      <div class="mt-5">
        <%= form.submit "Create URL", class: "btn btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
